{
  "version": 2,
  "builds": [
    {
      "src": "./frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    },
    {
      "src": "./api/register.js",
      "use": "@vercel/node"
    },
    {
      "src": "./api/signin.js", 
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/v1/register",
      "dest": "/api/register.js"
    },
    {
      "src": "/api/v1/signin",
      "dest": "/api/signin.js"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/build/index.html"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}
